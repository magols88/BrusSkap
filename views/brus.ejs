<!DOCTYPE html>
<html>
  <head>
    <title>Brus Shop</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="container py-5">
    <%- include('./partials/navbar.ejs', {users: users}) %>

    <h1 class="text-center mb-4 display-4">Velkommen til Frodes Bruskasse!</h1>

    <form
      id="orderForm"
      action="/brus/order"
      method="POST"
      class="mx-auto"
      style="max-width: 300px"
    >
      <div class="form-group">
        <label for="quantity" class="h4">Antall Brus:</label>
        <select
          id="quantity"
          name="quantity"
          class="form-control form-control-lg"
        >
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
        </select>
      </div>
      <input
        type="submit"
        value="Kjøp Brus"
        class="btn btn-primary btn-lg btn-block"
      />
    </form>
    <h3 class="h4">Du har drukket <%=orders%> brus til nå.</h3>

    <div class="modal" tabindex="-1" role="dialog" id="orderModal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title h4">Bekreftet</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h4 class="h5">Takk for handelen</h4>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/javascripts/brus.js"></script>
  </body>
</html>
