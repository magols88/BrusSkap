<!DOCTYPE html>
<html>
  <head>
    <title>Brus Shop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="container py-5">
    <%- include('./partials/navbar.ejs', {users: users}) %>

    <div class="image-form-container">
      <img
        src="https://i.postimg.cc/W4c4NhqB/Frode.jpg"
        alt="frode"
        class="background-image"
      />
      <form id="orderForm" action="/brus/order" method="POST" class="mx-auto">
        <div class="form-group">
          <input type="hidden" id="quantity" name="quantity" value="1" />
        </div>
        <h3 class="orders">
          Du skylder<br />
          <%=orders%>
          <br />
          Brus!
        </h3>

        <input type="submit" value="KjÃ¸p Brus" class="btn submit-button" />
      </form>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="orderModal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title h4">Bekreftet</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h4 class="h5">Takk for handelen</h4>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/javascripts/brus.js"></script>
  </body>
</html>
